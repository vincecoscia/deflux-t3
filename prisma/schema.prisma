// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// Necessary for Next auth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String?      @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  trades        Trade[]
  trade_groups  TradeGroup[]
  notes         Note[]
  studies       Study[]
  tags          Tags[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Trade {
  id           String      @id @default(cuid())
  platform     String      @default("TD Ameritrade")
  symbol       String
  side         String
  quantity     Int
  price        Float
  commission   Float
  return       Float?
  dateTime     DateTime
  timestamp    DateTime    @default(now())
  userId       String      @default(cuid())
  user         User        @relation(fields: [userId], references: [id])
  tradeGroupId String?     @default("None")
  tradeGroup   TradeGroup? @relation(fields: [tradeGroupId], references: [id])

  @@unique([userId, id])
  @@index([userId])
  @@index([tradeGroupId])
}

model Note {
  id        String   @id
  tradeId   String   @unique
  text      String
  timestamp DateTime @default(now())
  userId    String   @default(cuid())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Study {
  id          String   @id
  name        String
  startDate   DateTime
  endDate     DateTime
  description String
  userId      String   @default(cuid())
  user        User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model StudyTrade {
  id        String   @id
  studyId   String   @unique
  tradeId   String   @unique
  createdAt DateTime @default(now())
}

model TradeGroup {
  id          String  @id @default(cuid())
  name        String
  description String
  tags        Tags[]
  trades      Trade[]
  userId      String  @default(cuid())
  user        User    @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Tags {
  id           String     @id @default(cuid())
  name         String
  userId       String     @default(cuid())
  user         User       @relation(fields: [userId], references: [id])
  tradeGroupId String
  tradeGroup   TradeGroup @relation(fields: [tradeGroupId], references: [id])

  @@index([userId])
  @@index([tradeGroupId])
}
